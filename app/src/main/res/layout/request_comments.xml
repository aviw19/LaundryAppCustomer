<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heading"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:text="DO YOU HAVE ANY SPECIAL REQUESTS ?"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/heading"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeMaxTextSize="24dp"
        android:hint="Please write here"
        android:maxLength="256"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectweight"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@+id/comments"
        android:textAlignment="center"
        android:text="PLEASE SELECT ESTIMATED WEIGHT SLAB"
        android:textSize="20sp"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sixkgbutton"
        android:layout_below="@+id/selectweight"
        android:text=" 6KG  Cost : 240RS "/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eightkgbutton"
        android:layout_below="@+id/sixkgbutton"
        android:text=" 8KG  Cost : 320RS "/>
</RelativeLayout>