<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_margin="5dp"
    android:elevation="10dp"
    app:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/order_Orderid_heading"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:text="ORDER ID : "
            />
    <TextView
        android:id="@+id/order_OrderId"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:layout_toRightOf="@+id/order_Orderid_heading"
        android:layout_toEndOf="@+id/order_Orderid_heading"
        android:textColor="@android:color/black"
        android:text="ORDER ID"
        />
        <TextView
            android:id="@+id/RS"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/order_OrderId"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:text="RS : "
            />
        <TextView
            android:id="@+id/order_Price"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/order_OrderId"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/RS"
            android:layout_toEndOf="@+id/RS"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:text="PRICE"
            />
        <TextView
            android:id="@+id/order_status_heading"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/order_Price"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:text="STATUS : "
            />
        <TextView
            android:id="@+id/order_status"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/order_Price"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/order_status_heading"
            android:layout_toEndOf="@+id/order_status_heading"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:text="STATUS"
            />
        <TextView
            android:id="@+id/order_weight_heading"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/order_status"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:text="Weight : "
            />
        <TextView
            android:id="@+id/order_weight"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/order_status"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/order_weight_heading"
            android:layout_toEndOf="@+id/order_weight_heading"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:text="WEIGHT"
            />
        <TextView
            android:id="@+id/order_service_heading"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/order_weight"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:text="Service : "
            />
        <TextView
            android:id="@+id/order_service"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/order_weight"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/order_service_heading"
            android:layout_toEndOf="@+id/order_service_heading"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:text="SERVICE"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/order_service"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Comments : "
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_weight=".15"
                />
            <TextView
                android:id="@+id/order_Comments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ACTUAL COMMENT"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_weight=".7"/>
            <Button
                android:id="@+id/pay_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="PAY NOW"
                android:layout_marginRight="0dp"
                android:background="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:layout_weight=".15"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>