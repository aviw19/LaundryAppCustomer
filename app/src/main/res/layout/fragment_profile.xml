<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="NAME"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/profile_ID"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/profile_name"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:text="NAME"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/profile_phoneno"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/profile_ID"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:text="NAME"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/profile_emailid"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:layout_below="@+id/profile_phoneno"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:text="NAME"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/profile_hostelno"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:layout_below="@+id/profile_emailid"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:text="NAME"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_Edit"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:text="EDIT"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/profile_roomno"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/profile_hostelno"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:text="NAME"
        android:textSize="20dp"
        android:textStyle="bold"
        />


    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/profile_ID"
        android:background="@android:color/holo_blue_dark" />
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/profile_emailid"
        android:background="@android:color/holo_blue_dark" />
    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/profile_roomno"
        android:background="@android:color/holo_blue_dark" />
    <ImageView
        android:id="@+id/qrimage"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@+id/divider3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:src="@drawable/ic_laundry_pickup" />
    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="LOGOUT" />

</RelativeLayout>