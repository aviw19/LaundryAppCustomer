<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/order_id"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:text="ORDER ID"
        />
        <TextView
            android:id="@+id/order_total"
            android:layout_below="@+id/order_id"
            android:text="Order Total"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:layout_height="20dp"
            />
        <TextView
        android:id="@+id/order_Merchant"
        android:layout_width="match_parent"
        android:layout_height="20dp"
            android:text="MERCHANT HANDLING THE SERVICE"
            android:textColor="@android:color/black"
        android:layout_below="@+id/order_total"
            />
    <TextView
        android:id="@+id/order_weight"
        android:layout_below="@+id/order_Merchant"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="WEIGHT OF Order"
        android:textColor="@android:color/black"
        />
        <TextView
            android:id="@+id/order_status"
            android:layout_below="@+id/order_weight"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Status Of ORDER"
            android:textColor="@android:color/black"
            />
        <Button
            android:id="@+id/Order_details_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@android:color/white"
            android:text="View Details"
            android:background="@android:color/holo_blue_dark"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>