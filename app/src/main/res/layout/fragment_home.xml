<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/background_light">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/request_Order"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/Card2"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/request_Order"
        android:layout_toRightOf="@+id/request_Order"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/Card3"
        android:layout_toEndOf="@id/Card2"
        android:layout_toRightOf="@+id/Card2"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/Card4"
        android:layout_below="@+id/request_Order"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/Card5"
        android:layout_below="@+id/request_Order"
        android:layout_toEndOf="@id/Card4"
        android:layout_toRightOf="@+id/Card4"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/Card6"
        android:layout_toEndOf="@id/Card5"
        android:layout_toRightOf="@+id/Card5"
        android:layout_below="@+id/request_Order"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_notifications_black_24dp"
        />
</RelativeLayout>